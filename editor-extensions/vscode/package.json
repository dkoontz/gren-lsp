{
  "name": "gren-lsp",
  "description": "Language Server Protocol support for the Gren programming language",
  "author": "Gren LSP Contributors",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "gren-lsp",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dkoontz/gren-lsp"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "activationEvents": [
    "onLanguage:gren"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "gren",
        "aliases": [
          "Gren",
          "gren"
        ],
        "extensions": [
          ".gren"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gren LSP",
      "properties": {
        "grenLsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Gren LSP server binary. If empty, will try to find 'gren-lsp' in PATH."
        },
        "grenLsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Gren language server."
        },
        "grenLsp.debug.exportParseTree": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode to export tree-sitter parse trees for all opened Gren files."
        },
        "grenLsp.debug.parseTreeDirectory": {
          "type": "string",
          "default": "",
          "description": "Directory to export parse trees to when debug mode is enabled. If empty, will use system temp directory."
        },
        "grenLsp.compiler.autoDownload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download the Gren compiler version specified in gren.json. If disabled, will use system PATH."
        },
        "grenLsp.compiler.path": {
          "type": "string",
          "default": "",
          "description": "Path to a specific Gren compiler binary. If set, overrides automatic download and PATH lookup."
        }
      }
    },
    "commands": [
      {
        "command": "grenLsp.downloadCompiler",
        "title": "Download Gren Compiler",
        "category": "Gren"
      },
      {
        "command": "grenLsp.showCompilerVersion",
        "title": "Show Gren Compiler Version",
        "category": "Gren"
      },
      {
        "command": "grenLsp.testServerConnection",
        "title": "Test Server Connection",
        "category": "Gren"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "precompile": "npm install",
    "clean": "rm -rf out && rm -f tsconfig.tsbuildinfo",
    "compile": "npm run clean && tsc",
    "watch": "tsc -w",
    "prepackage": "npm run compile",
    "package": "vsce package",
    "install-extension": "npm run package && code --install-extension gren-lsp-1.0.0.vsix --force",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "test:info": "TEST_LOG_LEVEL=info node ./out/test/runTest.js",
    "test:debug": "TEST_LOG_LEVEL=debug node ./out/test/runTest.js",
    "test:verbose": "TEST_LOG_LEVEL=verbose node ./out/test/runTest.js",
    "test:ui": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/vscode": "^1.81.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.2.2",
    "vscode-extension-tester": "^8.10.0",
    "@types/mocha": "^10.0.8",
    "mocha": "^10.8.2",
    "@types/chai": "^4.3.20",
    "chai": "^4.5.0",
    "@vscode/test-electron": "^2.4.1",
    "glob": "^11.0.0"
  }
}
