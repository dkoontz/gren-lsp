{
  "name": "gren-lsp",
  "description": "Language Server Protocol support for the Gren programming language",
  "author": "Gren LSP Contributors",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "gren-lsp",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dkoontz/gren-lsp"
  },
  "engines": {
    "vscode": "^1.81.0"
  },
  "activationEvents": [
    "onLanguage:gren"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "gren",
        "aliases": [
          "Gren",
          "gren"
        ],
        "extensions": [
          ".gren"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gren LSP",
      "properties": {
        "grenLsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Gren LSP server binary. If empty, will try to find 'gren-lsp' in PATH."
        },
        "grenLsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Gren language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "precompile": "npm install",
    "compile": "tsc",
    "watch": "tsc -w",
    "prepackage": "npm run compile",
    "package": "vsce package",
    "build": "npm run compile"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.7",
    "@types/vscode": "^1.81.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.2.2"
  }
}
