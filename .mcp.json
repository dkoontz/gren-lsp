{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {}
    },
    "linkup": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "linkup-mcp-server", "--api-key=$LINKUP_API_KEY"],
      "env": {
        "LINKUP_API_KEY": "$LINKUP_API_KEY"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}
