module Model exposing
    ( Model
    , init
    )

import Dedris.Motion as Motion exposing ( Motion )
import Dedris.Tetromino as Tetromino exposing ( Tetromino )
import Dedris.Tower as Tower exposing ( Tower )


-- Datenmodell
type alias Model =
    { activeMotion : Motion
    , anchor : { row : Int , col : Int }
    , gameOver : Bool
    , next : Tetromino
    , pause : Bool
    , score : Int
    , tickerMillis : Float
    , tmino : Tetromino
    , tower : Tower
    , viewport : { height : Int , width : Int }
    }


-- Startwert f√ºr das Datenmodell
init : Model
init =
    { tower = Tower.new
    , tmino = Tetromino.i
    , next = Tetromino.i
    , anchor = { row = 0 , col = 3 }
    , score = 0
    , gameOver = False
    , tickerMillis = 1000
    , pause = False
    , viewport = { height = 0 , width = 0 }
    , activeMotion = Motion.None
    }
