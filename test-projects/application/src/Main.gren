module Main exposing (main)

import Browser
import Html exposing (Html, div, h1, text, button)
import Html.Attributes exposing (style)
import Html.Events exposing (onClick)


-- MAIN


main : Program {} Model Msg
main =
    Browser.element
        { init = init
        , view = view
        , update = update
        , subscriptions = subscriptions
        }


-- MODEL


type alias Model =
    { count : Int
    }


init : {} -> { model : Model, command: Cmd Msg }
init _ =
    { model = { count = 0 }, command = Cmd.none }


-- UPDATE


type Msg
    = Increment
    | Decrement


update : Msg -> Model -> { model : Model, command : Cmd Msg }
update msg model =
    when msg is
        Increment ->
            { model = { model | count  model.count + 1 }, command = Cmd.none }

        Decrement ->
            { model = { model | count = model.count - 1 }, command = Cmd.none }


-- SUBSCRIPTIONS


subscriptions : Model -> Sub Msg
subscriptions _ =
    Sub.none


-- VIEW


view : Model -> Html Msg
view model =
    div
        [ style "padding" "20px"
        , style "font-family" "Arial, sans-serif"
        , style "text-align" "center"
        ]
        [ h1
            [ style "color" "#333"
            , style "margin-bottom" "20px"
            ]
            [ text "Hello, World!" ]
        , div
            [ style "font-size" "18px"
            , style "color" "#666"
            , style "margin-bottom" "20px"
            ]
            [ text "Welcome to your Gren application!" ]
        , div
            [ style "margin" "20px 0" ]
            [ button
                [ onClick Decrement
                , style "margin-right" "10px"
                , style "padding" "10px 20px"
                , style "font-size" "16px"
                ]
                [ text "-" ]
            , div
                [ style "display" "inline-block"
                , style "margin" "0 20px"
                , style "font-size" "24px"
                , style "font-weight" "bold"
                ]
                [ text (String.fromInt model.count) ]
            , button
                [ onClick Increment
                , style "margin-left" "10px"
                , style "padding" "10px 20px"
                , style "font-size" "16px"
                ]
                [ text "+" ]
            ]
        ]